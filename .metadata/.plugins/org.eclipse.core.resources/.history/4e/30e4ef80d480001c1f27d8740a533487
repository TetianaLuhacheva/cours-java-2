package fr.box.run;

public class Menu {

	/*
	 * Accepte seulement trois parametres :
	 * 
	 * > combattant
	 * > stade
	 * > match
	 * 
	 */
	
	public Menu() {
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		Out.w("+++|                               |+++");
		Out.w("+++|          Main Menu            |+++");
		Out.w("+++|                               |+++");
		Out.w("++++-------------------------------++++"); 
		Out.w("++++-------------------------------++++");
		Out.w("+++|                               |+++");
		Out.w("+++|     1 - combattant Menu       |+++");
		Out.w("+++|     2 - stade      Menu       |+++");
		Out.w("+++|     3 - match      Menu       |+++");
		Out.w("+++|                               |+++");
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		
		Out.w("Meke your choice :");
		String choice = Out.r();
		
		SubMenu(choice);
		
	}
	
	public static void SubMenu(String obj) {
		
		/*
		-	saisir les combattants, 
		-   lister tous les combattants, 
		-   supprimer un combattant, 
		- 	modifier un combattant avec la méthode «merge». 
		
			NB : pour utiliser la méthode merge et remove  «d’entityManager », 
				il faut au préalable utiliser la méthode find 
				pour mettre l’entité dans le contexte JPA.
				
			-	saisir, modifier, supprimer, lister  un stade,
			-	de saisir un match qui doit opposer deux combattants, 
			- de le supprimer, lister tous les matchs.
		 */
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		Out.w("+++|                               |+++");
		Out.w("+++|              Menu             |+++");
		Out.w("+++|                               |+++");
		Out.w("+++|  1 - saisir le " + obj + "    |+++");
		Out.w("+++|  2 - lister tous " + obj + "s |+++");
		Out.w("+++|  3 - supprimer un " + obj + " |+++");
		Out.w("+++|  4 - modifier un " + obj + "  |+++");
		Out.w("+++|      avec la méthode «merge»  |+++");
		Out.w("+++|                               |+++");
		Out.w("+++|                               |+++");
		Out.w("+++|                               |+++");
		Out.w("++++-------------------------------++++");
		Out.w("++++-------------------------------++++");
		
		
		// - merge et remove «d’entityManager »
		// - la méthode find pour mettre l’entité dans le contexte JPA
		
		// - saisir, modifier, supprimer, lister  un stade,
		// - de saisir un match qui doit opposer deux combattants
		
		Out.w(""); 
		
		boolean choixFini = true;
		int choix = Out.rInt();
	
		
		while(choixFini) {
			
			switch(choix) {
			
			case 1:
				Out.w("+-------------------------------+");
				Out.w("|             Create            |");
				Out.w("+-------------------------------+"); 
				
				break;
				
			case 2:
				Out.w("+-------------------------------+");
				Out.w("|              Read             |");
				Out.w("+-------------------------------+");				
				break;
				
			case 3:
				Out.w("+-------------------------------+");
				Out.w("|             Update            |");
				Out.w("+-------------------------------+");				
				break;
				
			case 4:
				Out.w("+-------------------------------+");
				Out.w("|             Update            |");
				Out.w("+-------------------------------+");
				break;
				
			default :
				break;			
			}
			
		}
		
	}
	


}
